{
  "compilerOptions": {
    "target": "ES2020",
    "module": "preserve",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@merlebleu/shared": ["packages/merlebleu-shared/src"],
      "@merlebleu/shared/*": ["packages/merlebleu-shared/src/*"],
      "@merlebleu/api": ["packages/merlebleu-api/src"],
      "@merlebleu/api/*": ["packages/merlebleu-api/src/*"],
      "@merlebleu/app": ["packages/merlebleu-app/src"],
      "@merlebleu/app/*": ["packages/merlebleu-app/src/*"]
    },
    "composite": true
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
