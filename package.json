{
  "name": "merlebleu-monorepo",
  "version": "1.0.0",
  "description": "Merlebleu Monorepo - Shared, API, and App",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build -w @merlebleu/shared",
    "dev:shared": "npm run dev -w @merlebleu/shared",
    "build:api": "npm run build -w @merlebleu/api",
    "build:app": "npm run build -w @merlebleu/ui",
    "start:api": "npm run start:dev -w @merlebleu/api",
    "start:app": "npm start -w @merlebleu/ui",
    "start:all": "npm run start:api && npm run start:app",
    "generate:barrels": "npm run barrels -w @merlebleu/shared",
    "test": "npm test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
